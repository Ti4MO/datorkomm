public class MainChecksum {
	

	public static void main(String[] args) {
		
		//int falseAccepted = uppg1();
		/*
		CRC packet = new CRC(4);                     
		packet.printPacket();                        
		System.out.println(packet.packetAccepted());  
		packet.toggleBits(1);                        
		System.out.println(packet.packetAccepted()); 
 		*/
		//int falseAccepted = 0;
		
		// Här ska kod läggas in som "tillverkar" 100 000 paket, lägger in fel i dem och räknar 
		// hur många av de felaktiga paketen som mottagaren tror är rätt. Ett tips: en for-sats
		// är bra till detta. falseAccepted kan användas för att räkna antalet paket som 
		// accepteras av mottagaren fastän alla 100 000 paketen innehåller fel.
		
		
		System.out.println("Antal felaktiga som accepteras: " + uppg1(40));
		System.out.println("Antal felaktiga som accepteras: " + uppg2(40));
		System.out.println("Antal felaktiga som accepteras: " + uppg3(40));
		
	}

private static int uppg1(int wrongBits) {
	int falseAccepted = 0;
	for(int i = 0; i<100000;i++) {
		Paritybits packet = new Paritybits(9);  
		packet.toggleBits(wrongBits);
		if(packet.packetAccepted()) {
			falseAccepted++;
		}
			
	}
	return falseAccepted;
}


private static int uppg2(int wrongBits) {
	int falseAccepted = 0;
	for(int i = 0; i<100000;i++) {
		Checksum packet = new Checksum(9);  
		packet.toggleBits(wrongBits);
		if(packet.packetAccepted()) {
			falseAccepted++;
		}
		
	}
	return falseAccepted;
}

private static int uppg3(int wrongBits) {
	int falseAccepted = 0;
	for(int i = 0; i<100000;i++) {
		CRC packet = new CRC(9);  
		packet.toggleBits(wrongBits);
		if(packet.packetAccepted()) {
			falseAccepted++;
		}
		
	}
	return falseAccepted;
}

}
